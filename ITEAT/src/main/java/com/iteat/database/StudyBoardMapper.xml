<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.iteat.domain.StudyBoardDAO">
	<select id="selectStudyBoard" resultType="com.iteat.domain.StudyBoard">
		SELECT STUDY_SEQ,STUDY_TITLE,STUDY_ID,STUDY_CONTENT,STUDY_REGDATE,STUDY_RECRUIT,STUDY_REGION,STUDY_STACK,STUDY_HIT FROM (SELECT ROWNUM AS NUM, STUDY.* FROM STUDY ORDER BY STUDY_SEQ) WHERE NUM BETWEEN 1 AND 999 ORDER BY NUM DESC
	</select>
	
	<insert id="insertSB" parameterType="com.iteat.domain.StudyBoard">
		insert into study values (study_seq.nextval, #{title},#{id},#{content},sysdate, #{recruit}, #{region},#{stack},0)
	</insert>
	
	<select id="selectSB" parameterType="int" resultType="com.iteat.domain.StudyBoard">
		select * from study where study_seq=#{num}
	</select>
</mapper>